
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication - ShopEase</title>
    <link rel="shortcut icon" href="images/Favicon/shopease.png" type="image/x-icon"/>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <link rel="stylesheet" href="stylesheet/auth.css">
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <!-- Sign-In Form -->
                <form action="/login" method="post" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="email" name="email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" placeholder="Password" class="password-input" />
                        <i class="fas fa-eye password-toggle"></i>
                    </div>
                    <div id="sign-in-errors" class="error-container"></div>
                    <input type="submit" value="Login" class="btn solid" />
                    
                </form>

                <!-- Sign-Up Form -->
                <form action="/create" method="post" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="username" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" placeholder="Password" class="password-input" />
                        <i class="fas fa-eye password-toggle"></i>
                    </div>
                    <div id="sign-up-errors" class="error-container"></div>
                    <input type="submit" class="btn" value="Sign up" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>Join our community and start shopping with ease!</p>
                    <button class="btn transparent" id="sign-up-btn">Sign up</button>
                </div>
               
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>Sign in to access your account and continue shopping!</p>
                    <button class="btn transparent" id="sign-in-btn">Sign in</button>
                </div>
                
            </div>
        </div>
    </div>

    <script src="./script/auth.js"></script>
    <script src="./script/validator.js"></script>
    
</body>
</html>
