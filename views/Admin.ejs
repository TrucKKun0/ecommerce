<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Product Management</title>
    <link rel="stylesheet" href="/stylesheet/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <%- include('sidebar') %>

        <main class="main-content">
            <header class="content-header">
                <h1><i class="fas fa-box"></i> Product Management</h1>
                <a href="/admin/addProduct" class="button"><i class="fas fa-plus"></i> Add New Product</a>
            </header>
            
            <div class="search-container">
                <i class="fas fa-search"></i>
                <input type="text" id="productSearch" placeholder="Search products...">
            </div>

            <div class="product-list">
                <table>
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                            products.forEach(product =>{
                                %> 
                                <tr>
                                    <td><%= product._id %></td>
                                    <td><img src="/public/images/<%= product.productCategory%>/<%= product.productImage %>"></td>
                                    <td><%= product.productName %></td>
                                    <td><%= product.productCategory %></td>
                                    <td>Rs<%= product.productPrice %> </td>
                                    <td><%= product.productQuantity %></td>
                                    <td class="actions">
                                        <a href="admin/edit/<%=product._id%>">Edit</a>
                                        <a href="admin/delete/<%= product._id%>">Delete</a>
                                    </td>
                                </tr>
                                <%
                            })
                        %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>